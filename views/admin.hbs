<link rel="stylesheet" type="text/css" href="/css/admin.css">
<script type="text/javascript" src="/js/admin.js"></script>


<div class="body_container">

    <h1 id="home_header">Add Routes</h1>

    <div class="formInput">
        <form id="homeForm" onsubmit="addRoute()">
            <label>Company:</label>
            <input type="text" id="company" name="destination">
            <br>
            <label>Terminal:</label>
            <input type="text" id="terminal" name="destination">
            <br>
            <label>Destination:</label>
            <input type="text" id="destination" name="destination">
            <br>
            <label>Schedule:</label>
            <input type="text" id="schedule" name="destination">
            <br>
            <label>Price:</label>
            <input type="text" id="price" name="destination">
            <br>
            <input type="submit" id="submit">
        </form>
    </div>

    {{#each routes}}
        {{>admin_route}}
    {{/each}}
</div>